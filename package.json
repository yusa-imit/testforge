{
  "name": "testforge",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd scripts dev.ts",
    "dev:server": "bun run --cwd packages/server dev",
    "dev:web": "bun run --cwd packages/web dev",
    "build": "bun run build:server && bun run build:web",
    "build:server": "bun run --cwd packages/server build",
    "build:web": "bun run --cwd packages/web build",
    "db:migrate": "bun run --cwd packages/server db:migrate",
    "db:seed": "bun run --cwd scripts seed.ts",
    "test": "bun test",
    "lint": "bunx eslint .",
    "typecheck": "tsc --noEmit",
    "pre-qa": "bun run scripts/pre-qa-check.ts",
    "validate": "bun run scripts/pre-qa-check.ts"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/uuid": "^11.0.0",
    "bun-types": "^1.3.9",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "uuid": "^13.0.0"
  }
}
